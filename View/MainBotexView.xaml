<Window x:Class="Botex.View.MainBotexView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Botex.View"
        mc:Ignorable="d"
        Title="MainBotexView" Height="450" Width="800">
    <Grid>
        <RichTextBox x:Name="botexAnswerBox" Margin="0,0,0,122" IsReadOnly="True">
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <TextBox x:Name="botexInputBox" HorizontalAlignment="Center" Margin="0,317,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="464" Height="91"/>
        <Button x:Name="speechToTextBtn" Content="Polecenie Głosowe" HorizontalAlignment="Left" Margin="20,343,0,0" VerticalAlignment="Top"/>
        <Button x:Name="submitButton" Content="Zatwierdź" HorizontalAlignment="Left" Margin="680,388,0,0" VerticalAlignment="Top" Click="submitButton_Click"/>
        <TextBlock HorizontalAlignment="Center" Height="473" Margin="0,-39,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="844"/>

    </Grid>
</Window>
